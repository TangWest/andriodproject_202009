<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/func2_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/func2_text_4" />

            <TextView
                android:id="@+id/func2_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/func2_text_2"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="72sp" />

            <Button
                android:id="@+id/func2_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/func2_btn_1" />

            <Button
                android:id="@+id/func2_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/func2_btn_2" />

            <Button
                android:id="@+id/func2_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/func2_btn_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/func2_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/func2_text_5" />

            <TextView
                android:id="@+id/func2_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/func2_text_3"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="72sp" />

            <Button
                android:id="@+id/func2_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/func2_btn_1" />

            <Button
                android:id="@+id/func2_btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/func2_btn_2" />

            <Button
                android:id="@+id/func2_btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/func2_btn_3" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/func2_btn_7"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/func2_btn_4" />
    </LinearLayout>

</LinearLayout>